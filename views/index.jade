extends layout

append scripts
  script(src="/scripts/sha1.js")
  script(src="/scripts/hashblot.js")

block main
  .pictureframe
    svg#blotout(viewBox = '-1 -1 257 257')
      path#blotpath
  .fields
    input#email(type="text",placeholder="Your email address")
    input#site(type="text",placeholder="Site for blot")
    input#salt(type="text",placeholder="Optional salt")
    button Log in to keep a reminder for this site
  script.
    /*global hashblot*/

    function drawBlot(phrase) {
      document.getElementById('blotpath').setAttribute('d',
        phrase ? hashblot.sha1qp(phrase) : '');
    }
